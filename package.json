{
  "name": "node-ts-starter",
  "version": "2.0.0",
  "description": "Node.js, Typescript, Express starter template.",
  "main": "main.js",
  "author": "Nasim Uddin",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "cross-env TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/main.js",
    "lint": "eslint --ext .ts .",
    "clean": "rimraf dist",
    "migrate": "prisma migrate dev --schema src/prisma/schema.prisma --name"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=16.10.0",
    "npm": ">=8.5.0"
  },
  "dependencies": {
    "@prisma/client": "^3.13.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "prisma": "^3.13.0"
  }
}
